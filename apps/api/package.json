{
  "name": "api",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "build": "cargo install --path miden-package-metadata --locked && cargo install --path miden-verifier --locked && next build",
    "start": "PORT=3001 node .next/standalone/apps/api/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "db:push": "pnpm drizzle-kit push"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "1.0.0-beta.12-a5629fb",
    "next": "^16.1.6",
    "pg": "^8.17.2",
    "react": "^19.2.4",
    "smol-toml": "^1.6.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.10",
    "@workspace/eslint-config": "workspace:^",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "1.0.0-beta.12-a5629fb",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
